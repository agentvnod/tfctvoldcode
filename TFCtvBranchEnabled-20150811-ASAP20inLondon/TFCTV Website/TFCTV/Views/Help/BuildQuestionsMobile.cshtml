@model List<TFCTV.Models.HelpCenterQuestionModel>
@{
    int id = 0;
    bool IsActive = false;
    string subitem_level = String.Empty;
    if (ViewBag.id != null)
    {
        id = ViewBag.id;
    }
    if (ViewBag.IsActive != null)
    {
        IsActive = ViewBag.IsActive;
    }
    if (ViewBag.subitem_level != null)
    {
        subitem_level = ViewBag.subitem_level;
    }
}
@{if (Model != null)
  {
      if (Model.Count() > 0)
      {
    <ul class="panel-group collapse" id="@subitem_level">
        @{foreach (var item in Model)
          {
              string subsubitem_level = String.Format("levvv{0}", item.id);
            <li class="panel">
                <!-- Lev 111, item 1 -->
                <span data-toggle="collapse" data-parent="@String.Format("#{0}", subitem_level)" data-target="@String.Format("#{0}", subsubitem_level)">
                    <i class="indicator glyphicon glyphicon-chevron-right"></i>@item.Q</span>
                <ul class="answer l4 panel-group collapse" id="@subsubitem_level">
                    <!-- Lev 1111 -->
                    <p>
                        @Html.Raw(HttpUtility.HtmlDecode(item.Answer))</p>
                </ul>
            </li>
          }
        }
    </ul>
      }
  }
}
