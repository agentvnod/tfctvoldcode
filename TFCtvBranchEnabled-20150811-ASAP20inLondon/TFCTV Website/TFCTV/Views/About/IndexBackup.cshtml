@{
    ViewBag.Title = "About - TFC.tv";
    Layout = "~/Views/Shared/_TFCTVBlue.cshtml";
}
<div id="mainBody">
    <br />
    <div id="main_container">
        <div id="aboutUsContainer">
            <!-- ============================ -->
            <div id="aboutUsHeaderContainer">
                <div id="aboutUsHeaderContent">
                    <div id="headerBox" class="right">
                        <div id="aboutUsTitle">
                            TFC.tv is the digital tambayan of the global Pinoy!
                        </div>
                        <div id="aboutUsContent">
                            We bring together on one digital platform the social interaction of Filipinos worldwide
                            and the advanced viewing experience of homegrown content. As the official platform
                            of The Filipino Channel (TFC), we are the largest, most complete and up-to-date
                            source on the web for free and premium videos from ABS-CBN Global. With added social
                            and interactive features, we serve to bridge and nurture the relationships of Filipinos
                            all around the world.
                            <br />
                            <br />
                            Join our tambayan and register <a href="/User/Register/"><span class="link">here</span></a>.
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================ -->
            <!-- ============================ -->
            <div id="goDigitalContainer">
                <div id="goDigitalContentContainer">
                    <div id="goDigitalTitle">
                        <span class="title">GO DIGITAL</span> with your TFC experience
                    </div>
                    <div class="contentWrap">
                        <div id="goDigitalLeftInfoContainer" class="left">
