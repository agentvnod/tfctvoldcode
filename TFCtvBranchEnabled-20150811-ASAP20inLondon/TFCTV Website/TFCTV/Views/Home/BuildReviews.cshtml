@model List<HomepageFeatureItem>
@{if (Model != null)
  {
      if (Model.Count() > 0)
      {
    <div class="reviews col-md-3 col-sm-6 col-xs-12 hide480">
        <h2>
            Top Reviews</h2>
        @foreach (var item in Model)
        { 
            <div class="post">
                @Html.Raw(item.blurb.Ellipsis(100))
            </div>    
        }
    </div>
      }
  }
             
}
