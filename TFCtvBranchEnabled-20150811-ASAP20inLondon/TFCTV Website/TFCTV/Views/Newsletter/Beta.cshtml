@{
    ViewBag.Title = "Beta";
    Layout = null;
}
<html>
<head>
    <title>TFC.tv</title>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <style type="text/css">
        body, td, th
        {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 12px;
        }

        a:link
        {
            color: #ED1E26;
            text-decoration: none;
        }

        a:visited
        {
            color: #ED1E26;
            text-decoration: none;
        }

        a:hover
        {
            text-decoration: none;
        }

        a:active
        {
            text-decoration: none;
        }

        h1
        {
            font-size: 24px;
        }

        h2
        {
            font-size: 14px;
        }

        h3
        {
            font-size: 12px;
        }

        h4
        {
            font-size: 10px;
        }

        h4
        {
            color: #FFF;
        }

        #Table_01 tr td h1
        {
            color: #FFF;
        }

        title
        {
            color: #000;
        }

        #Table_01 tr td #title
        {
            color: #000;
        }

        #Table_01 tr #body2 p
        {
            color: #FFF;
        }

        #Table_01 tr td #body3
        {
            color: #FFF;
        }

        #Table_01 tr td #body4
        {
            color: #FFF;
        }

        h5
        {
            font-size: 18px;
        }

        #Table_01 tr td h5
        {
            color: #FFF;
        }

        #Table_01 tr td h3
        {
            color: #FFF;
        }
    </style>
</head>
<body bgcolor="#FFFFFF" leftmargin="0" topmargin="0" marginwidth="0" marginheight="0">
    <table width="600" height="680" border="0" align="center" cellpadding="0" cellspacing="0"
        id="Table_01">
        <tr>
            <td rowspan="8" bgcolor="#0B3158">
                &nbsp;
            </td>
            <td rowspan="2">
                @Html.ImageBuilder(Url, "newsletters/beta/images/emailer-5_02.jpg", new { width = 135, height = 50 })
            </td>
            <td colspan="4" rowspan="2" bgcolor="#0B3158">
                &nbsp;
            </td>
            <td width="574" height="20" colspan="8" align="right" bgcolor="#0B3158">
                &nbsp;
            </td>
            <td rowspan="8" bgcolor="#0B3158">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td colspan="8" bgcolor="#0B3158">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td colspan="7">
                @Html.ImageBuilder(Url, "newsletters/beta/images/emailer-5_07.jpg", new { width = 363, height = 246 })
            </td>
            <td width="574" colspan="2" bgcolor="#FFFFFF">
                <h2 id="name">
                    &nbsp;</h2>
            </td>
            <td colspan="3" bgcolor="#FFFFFF">
                <h2 id="name2">
                    @ViewBag.FirstName,
                </h2>
                <h2 id="title">
                    Ang da best Kapamilya online TV, nandito na!
                </h2>
                <p id="body1">
                    Dahil deserve mo ang da best, mapapanood mo na ang mga Kapamilya shows and movies
                    in high quality*! Register for your 14-Day FREE TRIAL at simulan na ang panonood
                    sa bagong TFC.tv.
                </p>
                CLICK <a href="@ViewBag.InvitationKey">HERE</a> TO REGISTER<br>
                <a href="@ViewBag.InvitationKey">@GlobalConfig.baseUrl/@ViewBag.InvitationKey</a>
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/emailer-5_09.jpg", new { width = 15, height = 246 })
            </td>
        </tr>
        <tr>
            <td width="574" height="80" colspan="13" align="center" valign="bottom" bgcolor="#0B3158">
                <h5>
                    Check out TFC.tv&rsquo;s top features!</h5>
            </td>
        </tr>
        <tr>
            <td width="574" height="111" colspan="2" align="left" valign="top" bgcolor="#0B3158"
                id="body2">
                <p>
                    <strong>WATCH VIDEOS INSTANTLY
                        <br>
                    </strong>
                </p>
                <p id="body2">
                    Say goodbye to waiting time dahil sa bagong TFC.tv, ang buffering di na problema
                    sa tuloy-tuloy ninyong panonood.*
                </p>
            </td>
            <td bgcolor="#0B3158">
                &nbsp;
            </td>
            <td width="574" height="111" colspan="5" align="left" valign="top" bgcolor="#0B3158">
                <p id="body3">
                    <strong>SOCIALIZE WITH TFC USERS<br>
                    </strong>
                </p>
                <p id="body3">
                    Facebook? Twitter? Makipag-chikahan with Kapamilya fans worldwide dahil konektado
                    ka sa mga popular social platforms.
                </p>
                <p>
                    <br>
                </p>
            </td>
            <td colspan="2" bgcolor="#0B3158">
                &nbsp;
            </td>
            <td width="574" height="111" colspan="3" align="left" valign="top" bgcolor="#0B3158">
                <p id="body4">
                    <strong>GET YOUR OWN PROFILE </strong>
                </p>
                <p id="body4">
                    Live your virtual reality at magpakilala sa mundo as a true Kapamilya with your
                    very own Profile Page on TFC.tv.
                </p>
            </td>
        </tr>
        <tr>
            <td colspan="3">
                @Html.ImageBuilder(Url, "newsletters/beta/images/emailer-5_20.jpg", new { width = 196, height = 111 })
            </td>
            <td colspan="7" bgcolor="#0B3158">
                @Html.ImageBuilder(Url, "newsletters/beta/images/emailer-5_21.jpg", new { width = 193, height = 111 })
            </td>
            <td colspan="3">
                @Html.ImageBuilder(Url, "newsletters/beta/images/emailer-5_22.jpg", new { width = 194, height = 111 })
            </td>
        </tr>
        <tr>
            <td colspan="13" align="center" valign="middle" bgcolor="#0B3158">
                <h3>
                    CLICK <a href="@ViewBag.InvitationKey">HERE</a> TO REGISTER<br>
                    To register, click on the link below or copy and paste it to your browser<br />
                    <a href="@ViewBag.InvitationKey">@GlobalConfig.baseUrl/@ViewBag.InvitationKey</a>
            </td>
        </tr>
        <tr>
            <td width="574" height="54" colspan="13" align="center" bgcolor="#0B3158">
                <h4>
                    This is a limited beta launch, not all features are available and some may not function
                    as intended.<br>
                    *Video quality and continuous streaming is dependent on a minimum internet connection
                    speed of 512 Kbps.<br>
                    For TFCnow related inquiries, @Html.ActionLink("click here", "Index", "Help") for
                    additional information.<br>
                    If you do not want to receive any more emails from TFC.tv, please click on the unsubscribe
                    button below.</h4>
            </td>
        </tr>
        <tr>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 17, height = 1 })
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 131, height = 1 })
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 52, height = 1 })
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 9, height = 1 })
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 21, height = 1 })
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 5, height = 1 })
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 136, height = 1 })
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 9, height = 1 })
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 12, height = 1 })
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 1, height = 1 })
            </td>
            <td width="574">
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 10, height = 1 })
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 101, height = 1 })
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 78, height = 1 })
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 9, height = 1 })
            </td>
            <td>
                @Html.ImageBuilder(Url, "newsletters/beta/images/spacer.gif", new { width = 9, height = 1 })
            </td>
        </tr>
    </table>
</body>
</html>