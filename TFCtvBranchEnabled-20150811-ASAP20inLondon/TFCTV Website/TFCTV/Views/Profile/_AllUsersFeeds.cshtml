<div id="EveryoneActivityFeeds">
    <div class="scrollbar">
        <div class="track">
            <div id="all-user-feeds-bar" class="thumb disable">
                <div class="end">
                </div>
            </div>
        </div>
    </div>
    <div class="viewport">
        <div id="everyonesFeedsHolder" class="overview">
            <div id="loader-AllUserActivityFeeds">
                @Html.ImageBuilder(Url, "ajax-loader.gif", new { alt = "", width = 50, height = 50 })</div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var everyonesParams = { userId: '@ViewBag.viewedUserUserId' };
        loadEveryonesFeeds(everyonesParams)

        $("#allUsersActivity").live("click", function () {
            loadEveryonesFeeds(everyonesParams)
        });

        setInterval(function () {
            loadEveryonesFeeds(everyonesParams)
        }, 30000);
    });
</script>
