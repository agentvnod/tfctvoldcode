@model List<TopReviewersDisplay>
@{if (Model != null)
  {
      if (Model.Count > 0)
      { 
    <div id="reviewers-body">
        @foreach (var item in Model)
        {
            var starUrl = Html.ContentBuilder(Url, "content/images/social/stars_5.png").ToString();
            if (item.totalReview < 5)
            {
                starUrl = Html.ContentBuilder(Url, String.Format("content/images/social/stars_{0}.png", item.totalReview)).ToString();
            }

            string href = String.Format("/Profile/{0}", item.userId);
            <div class="reviewer-row">
                <div class="personPhoto left">
                    <a href="">
                        <img width="40" border="0" title="@Html.Raw(item.userName)" src="@Html.Raw(item.userPhoto)"></a>
                </div>
                <ul class="reviewer_info">
                    <li><strong><a href="@href">@Html.Raw(item.userName)</a></strong></li>
                    <li class="ratingSpace">
                        <ul>
                            <li class="reviewStars">
                                <img align="top" width="75" height="15" alt="" src="@starUrl" />
                            </li>
                            <li class="usefulCount">&nbsp;<span>@item.totalReview Reviews</span></li>
                        </ul>
                    </li>
                </ul>
            </div>
        }
    </div>
      }
  }
}
<div class="clear">
</div>
