@model List<MyMenu>
@{
    bool isDesktop = true;
    if (ViewBag.IsDesktop != null)
    {
        isDesktop = ViewBag.IsDesktop;
    }
}
@{if (Model != null)
  {

      if (Model.Count() > 0)
      {
    <div class="ib_marea">
        <ul @Html.Raw(String.Format("{0}", isDesktop ? " class=\"sub\"" : String.Empty))>
            @foreach (var item in Model)
            {
                string href = String.Format("/Category/List/{0}/{1}", item.id, MyUtility.GetSlug(item.name));
                <li><a href="@href">@item.name</a></li>        
            }
        </ul>
    </div>
      }
  }  
}
