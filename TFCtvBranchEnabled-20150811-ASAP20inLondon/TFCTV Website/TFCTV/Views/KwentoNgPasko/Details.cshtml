    CheckSubscriptionReturnObject HasActiveSubscriptionBasedOnCategoryId = ViewBag.HasActiveSubscriptionBasedOnCategoryId;

    var streamID = "Episode_" + Model.EpisodeId;
    var categoryID = "Comments";

