@using IPTV2_Model
@model IEnumerable<Episode>
@{
    ViewBag.Title = "FPJ: Idolo ng Pilipino - TFC.tv";
    Layout = "~/Views/Shared/_TFCTVBlue.cshtml";

}
<br />
<br />
<div>
    <div style="width: 940px; display: table; margin: 0 auto;">
        <div class="transparentBg">
            <div id="dTopLinksFour" style="display: table; margin: 0 auto; font-size: 20px;">
                @Html.ActionLink("MAIN PAGE", "Index", "FPJ") | MOVIE LIBRARY</div>
            <div id="featuredCelebrities">
                <div id="featuredItems_featuredTitles" class="featuredItems">
                    <div class="fullHeaderFull">
                        <div class="fullHeader_title">
                            <div class="floatLeft" style="width: 940px;">
                                <h1 class="uaap-title mbottom20">
                                    MOVIE PACKAGES</h1>
                            </div>
                        </div>
                    </div>
                    <div class="sortlinks">
                        <a href="/FPJ/Library">Packages</a> | Titles</div>
                    <div class="floatRight white" style="margin-right: 20px;">
                        <div class="floatLeft" style="margin-top: 12px; margin-right: 10px;">@ViewBag.OutOf
                            of @ViewBag.TotalCount</div>
                        <a href="@Url.Action("LibraryA", "FPJ", new { id = ViewBag.Previous })" class="prev-btn-square white">
                            PREV</a><a href="@Url.Action("LibraryA", "FPJ", new { id = ViewBag.Next })" class="next-btn-square white">
                                NEXT</a></div>
                    <div class="clear breakStandard">
                    </div>
                    <div id="latestShows_bodyContainer" class="transparentBg">
                        <div id="dsFeatureItems">
                            <div class="itemListBody">
                                <ul class="dsitemListing">
                                    @foreach (var item in Model)
                                    {
                                        string img = String.IsNullOrEmpty(item.ImageAssets.ImageBackground) ? GlobalConfig.AssetsBaseUrl + GlobalConfig.BlankGif : String.Format("{0}{1}/{2}", GlobalConfig.EpisodeImgPath, item.EpisodeId, item.ImageAssets.ImageBackground);
                            
                                        <li>
                                            <div class="chartItem">
                                                <div class="chartImage">
                                                    <div class="chartImageHolder">
                                                        <a href="/FPJ/Details/@item.EpisodeId">
                                                            <img src="@img" title="@item.Description" alt="@item.Description" height="240" width="205" />
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="chartInfo">
                                                    <div class="chartInfoTitle">
                                                        <a href="/FPJ/Details/@item.EpisodeId">@item.EpisodeName</a></div>
                                                </div>
                                                <div class="clear">
                                                </div>
                                            </div>
                                            <div class="clear">
                                            </div>
                                        </li>
                            
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="clear">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="apple_overlay" id="bs_overlay">
    <!-- the external content is loaded inside this tag -->
    <div class="contentWrap">
    </div>
    <div class="contentMessage" style="color: #000">
    </div>
</div>
@section Stylesheet{
    @Html.CssBuilder(Url, "uaap.4.css")
    @Html.CssBuilder(Url, "getpackage.css")
    @Html.CssBuilder(Url, "payment.css")
    @Html.CssBuilder(Url, "overlay-apple.css")
    @Html.CssBuilder(Url, "tabs-no-images.css")
    @Html.CssBuilder(Url, "tfckat.6.css")
    @Html.CssBuilder(Url, "fpj.4.css")
    <!--[if IE 9]>
    @Html.CssBuilder(Url, "uaap.ie9.css")
    @Html.CssBuilder(Url, "tfckat.ie9.css")
    <![endif]-->
    <!--[if lte IE 8]>
    @Html.CssBuilder(Url, "uaap.ie8.css")
    <![endif]-->
    <!--[if lte IE 7]>
    @Html.CssBuilder(Url, "tfckat.ie7.css")
    <![endif]-->
}
@section JScript {
    @Html.JsBuilder(Url, "common.1.js")
    @Html.JsBuilder(Url, "packages.js")
}
@section JScriptBottom {
    <script type="text/javascript">

    </script>
    @Html.JsBuilder(Url, "package_overlay.js")
}
