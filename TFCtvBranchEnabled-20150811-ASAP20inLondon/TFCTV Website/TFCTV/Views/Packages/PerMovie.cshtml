@section JScriptBottom {
    <script type="text/javascript">
        var data = '@Ajax.JavaScriptStringEncode(ViewBag.Search)';
        if (data.length > 0) {
            $('#livestreamingtextbox').val('@ViewBag.Search');
        }
        $('#livestreamingtextbox').focus(function () {
            if (data.length > 0) {
                $('#livestreamingtextbox').val('@ViewBag.Search');
            } else {
                $(this).val('')
            }
        });

        $('.buyproduct').overlay({
            mask: 'black',
            closeOnClick: false,
            fixed: false,
            onBeforeLoad: function () {
                $(".apple_overlay").width(640);
                var wrap = this.getOverlay().find(".contentWrap");
                wrap.load(this.getTrigger().attr("href"));
            },
            onClose: function () {
                $('#bs_overlay .contentWrap').empty();
            }
        });
        $('#bs_overlay').css('text-align', 'left');
    </script>
