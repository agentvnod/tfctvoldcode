                @Html.Action("BuildUXMenu", "Menu", new { id = "Movies", isDesktop = false })
                <!-- end submenu mobile -->
            </li>
            <li><a href="@Url.Action("News", "Category")">News</a>
                @Html.Action("BuildUXMenu", "Menu", new { id = "News", isDesktop = false })
