            <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span
                class="icon-bar"></span><span class="icon-bar"></span>
        </button>
    </div>
    <div class="collapse navbar-collapse nav-colapse">
        <ul class="nav navbar-nav">
            <li><a href="@Url.Action("Shows", "Category")">SHOWS</a>
                @Html.Action("BuildUXMenu", "Menu", new { id = "Entertainment", isDesktop = false })
                <!-- end submenu mobile -->
            </li>
