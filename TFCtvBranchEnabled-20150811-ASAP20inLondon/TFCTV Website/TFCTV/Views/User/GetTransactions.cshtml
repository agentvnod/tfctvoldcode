@model List<TransactionDisplay>
<div class="table_cont table_transactions">
    <div class="table-responsive">
        <table class="table table-striped subscription_table">
            <thead>
                <!-- table header -->
                <tr>
                    <th>
                        TID
                    </th>
                    <th>
                        PRODUCT
                    </th>
                    <th>
                        DATE
                    </th>
                    <th>
                        AMOUNT
                    </th>
                    <th>
                        CURRENCY
                    </th>
                    <th>
                        TYPE
                    </th>
                    <th>
                        MODE
                    </th>
                    <th>
                        REFERENCE
                    </th>
                </tr>
            </thead>
            <!-- END table header -->
            <tbody>
                <!-- table body -->
                @{if (Model != null)
                  {
                      if (Model.Count() > 0)
                      {
                          foreach (var item in Model)
                          {
                    <tr>
                        <td>
                            @item.TransactionId
                        </td>
                        <td>
                            @item.ProductName
                        </td>
                        <td>
                            @item.TransactionDateStr
                        </td>
                        <td>
                            @item.Amount.ToString("0.00")
                        </td>
                        <td>
                            @item.Currency
                        </td>
                        <td>
                            @item.TransactionType
                        </td>
                        <td>
                            @item.Method
                        </td>
                        <td>
                            @item.Reference
                        </td>
                    </tr>
                          }
                      }
                  }
                  else
                  {
                    <tr>
                        <td colspan="3">
                            <p>
                                No transactions found.</p>
                        </td>
                    </tr>
                  }
                }
            </tbody>
            <!-- END table body -->
        </table>
        <!-- End table -->
    </div>
    <!-- end .table-responsive [responsive table container]-->
    <div class="sec_footer">
        <!-- load more -->
        <a href="#" class="loadMore">load more<br>
            @Html.ImageBuilder(Url, "ux/load_more.png", new { alt = "Load more items" })</a>
    </div>
</div>
