@{
    ViewBag.Title = "Claim your free ABS-CBN Free Live Stream entitlement - TFC.tv";
    Layout = "~/Views/Shared/_TFCTVBlue.cshtml";
}
<div id="mainBody">
    <br />
    <br />
    <div class="transparentBg floatLeft">
        <div class="clear">
        </div>
        <div>@*@Html.ImageBuilder(Url, "register/REGISTRATION-PAGES-2C.jpg", new { width = 940 })*@</div>
        <!-- start of list -->
        <div id="registerContainer">
            <div class="breakStandard">
            </div>
            <div id="registerPane">
                <div>
                    <div class="breakStandard">
                    </div>
                    <div class="rheader">
                        Congratulations! You have successfully claimed a free entitlement.
                    </div>
                    <div id="freetrial01">
                        <div style="padding-top: 20px;">
                            <center>
                                @{if ((bool)ViewBag.ActivationSuccess)
