@section JScriptBottom {
<script type="text/javascript">
    // one of two is required [tve-activation.html]
    $('.pay_optg').keyup(function () {
        var name = $(this).attr('name');
        var value = $(this).val();
        if (name == "smartCardNum" && value != "") {
            $("#cusAccount").removeAttr("required");
            $("#cusAccount").val("");
        } else if (name == "cusAccount" && value != "") {
            $("#smartCardNum").removeAttr("required");
            $("#smartCardNum").val("");
        }

        if (name == "smartCardNum" && value == "") {
            $("#cusAccount").attr("required", "required");
        } else if (name == "cusAccount" && value == "") {
            $("#smartCardNum").attr("required", "required");
        }
    });
    // END required ...

    $('input').keyup(function () {
        $('input:invalid').css('box-shadow', '0  0 3px rgba(255,0,0,0.5)');
        $('input:valid, #genActCodeMsg input:invalid').css('box-shadow', 'none');
    });


    // chack validetion on [To generate and claim your TFC Activation Code, click here]
    $('#genActCodeMsgT').click(function (e) {
        e.preventDefault();
        if ($('#smartCardNum').val() != "" || $('#cusAccount').val() != "") {
            var form = $('form');
            $('#genActCodeMsg .err').empty();
            $('.succ').hide();
            $('.fail').hide();
            $('.load').show();
            $('#genActCodeMsg').modal('show');
            $.post('/User/ResendTVEActivationCode', form.find('input').serialize(), function (data) {
                if (data.StatusCode == 0) {
                    $('.succ').show();
                    $('.fail').hide();
                    $('.load').hide();
                }
                else {
                    $('#genActCodeMsg .err').html(data.StatusMessage);
                    $('.succ').hide();
                    $('.load').hide();
                    $('.fail').show();
                }
            }).done(function () {
                $('#genActCodeMsg').modal('show');
            });
        }
        else {
            $('#smartCardNum').css('box-shadow', '0  0 3px rgba(255,0,0,0.5)');
            $('#cusAccount').css('box-shadow', '0  0 3px rgba(255,0,0,0.5)');
            $('#smartCardNum').focus();
        }
    });
    // check submit
    $('#page_submit').click(function () {
        $('input:invalid').css('box-shadow', '0  0 3px rgba(255,0,0,0.5)');
        $('input:valid, #genActCodeMsg input:invalid').css('box-shadow', 'none');
    });
</script>
}
