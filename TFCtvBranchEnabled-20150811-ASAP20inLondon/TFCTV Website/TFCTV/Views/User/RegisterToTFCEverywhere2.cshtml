        if (TempData["ErrorMessage"] != null)
        {
            ErrorMessage = (TransactionReturnType)TempData["ErrorMessage"];
        }
    }
    catch (Exception) { }

    string href = String.Format("{0}/User/RegisterToTFCEverywhere", GlobalConfig.baseUrl);

    ViewBag.DaxName = "tfc-tv:user:activate-tfc-everywhere";
}
